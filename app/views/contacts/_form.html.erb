<%= form_with model: [:client, @contact] do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :department, class: "form-label" %>
    <%= form.text_field :department, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :mobile, class: "form-label" %>
    <%= form.text_field :mobile, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <%= form.hidden_field :client_id, value: params[:client_id] %>
  <%= form.submit :Save, class: "btn btn-primary" %>
<% end %>
